<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="setup_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@mipmap/blue_bkg</item>
    </style>

    <style name="setup1_desc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#bb000000</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:drawableLeft">@android:drawable/btn_star_big_on</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="dot_setup_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="icon_setup_center">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="btn_setup_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_dialog_btn_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="dialog_title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@mipmap/blue_bkg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_style">
        <!--弹框是否有边框线-->
        <item name="android:windowFrame">@null</item>
        <!--弹框是否可浮现在activity之上才有外部可点击-->
        <item name="android:windowIsFloating">true</item>
        <!--弹窗是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--弹窗是否允许被背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否全屏-->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>

    </style>

    <style name="dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

</resources>
