<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.sjfd.Setup4Activity">
    <TextView
        style="@style/setup_title_style"
        android:text="4.恭喜您，设置完成"/>
    <CheckBox
        android:id="@+id/cb_start_antithelf_setup4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打钩开启防盗保护"
        android:paddingHorizontal="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/tv_desc_fandao_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="防盗保护服务关闭"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <View
            style="@style/dot_setup_style"
            android:background="@android:drawable/presence_invisible"/>
        <View
            style="@style/dot_setup_style"
            android:background="@android:drawable/presence_invisible"/>
        <View
            style="@style/dot_setup_style"
            android:background="@android:drawable/presence_invisible"/>
        <View
            style="@style/dot_setup_style"
            android:background="@android:drawable/presence_online"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            style="@style/icon_setup_center"
            android:src="@mipmap/step_4" />
        <Button
            android:id="@+id/btn_pre_setup4"
            style="@style/btn_setup_bottom"
            android:text="上一步"/>
        <Button
            android:id="@+id/btn_complement_setup4"
            style="@style/btn_setup_bottom"
            android:layout_alignParentRight="true"
            android:text="设置完成"/>
    </RelativeLayout>
</LinearLayout>