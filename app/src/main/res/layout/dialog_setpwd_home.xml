<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title_dialog_pwd_home"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/blue_bkg"
        android:text="设置密码"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/et_enter_pwd_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="numberPassword"/>
    <EditText
        android:id="@+id/et_confirm_pwd_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认密码"
        android:inputType="numberPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel_pwd_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/selector_dialog_btn_bg"/>
        <Button
            android:id="@+id/btn_confirm_pwd_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:background="@drawable/selector_dialog_btn_bg"/>
    </LinearLayout>
</LinearLayout>